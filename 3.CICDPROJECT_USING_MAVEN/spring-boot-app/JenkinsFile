pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven' // Ensure this matches your Maven configuration in Jenkins
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/codekbganesh/Jenkins_SpringBoot_Project1', branch: 'main'
            }
        }

        stage('Build with Maven') {
            steps {
                dir('3.CICDPROJECT_USING_MAVEN/spring-boot-app') {  // Navigate to the project directory
                    script {
                        sh "${MAVEN_HOME}/bin/mvn clean package"
                    }
                }
            }
        }

        stage('Archive JAR') {
            steps {
                dir('3.CICDPROJECT_USING_MAVEN/spring-boot-app') {  // Ensure path points to the correct folder
                    archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
                }
            }
        }
    }

    post {
        success {
            echo 'Build and packaging succeeded!'
        }
        failure {
            echo 'Build or packaging failed.'
        }
    }
}
