pipeline {
    agent any

    tools {
        maven 'Maven' // Make sure this matches the name of your Maven installation in Jenkins
        jdk 'JDK17'  // Ensure this matches your Java version (e.g., 'JDK11' or another version)
    }

    environment {
        PROJECT_PATH = 'spring-boot-app' // Relative path to your Spring Boot project directory
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Pull code from the repository
                git branch: 'main', url: 'https://github.com/codekbganesh/Jenkins_SpringBoot_Project1.git'
            }
        }

        stage('Build with Maven') {
            steps {
                dir("${PROJECT_PATH}") {
                    // Run Maven commands to build the project
                    sh 'mvn clean package'
                }
            }
        }

        stage('Archive JAR') {
            steps {
                // Archive the JAR file for easy access in Jenkins
                archiveArtifacts artifacts: "${PROJECT_PATH}/target/*.jar", allowEmptyArchive: true
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed. Check logs for details.'
        }
    }
}
